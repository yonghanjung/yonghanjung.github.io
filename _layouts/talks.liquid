---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="talks-list">
      {%- assign talks = site.talks | sort: 'date' | reverse -%}
      {%- for talk in talks -%}
        <div class="talk-item" style="margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 1.5rem;">
          <h3 class="talk-title" style="font-size: 1.2rem; margin-bottom: 0.25rem;">{{ talk.title }}</h3>
          <p class="talk-meta" style="font-size: 0.9rem; color: #666;">
            <strong>{{ talk.venue }}</strong>
            <br>
            {{ talk.location }} | {{ talk.date | date: '%B %d, %Y' }}
          </p>
          {%- if talk.slides or talk.video -%}
            <p class="talk-links">
              {%- if talk.slides -%}
                <a href="{{ talk.slides | relative_url }}" class="btn btn-sm z-depth-0" role="button" target="_blank">Slides</a>
              {%- endif -%}
              {%- if talk.video -%}
                <a href="{{ talk.video }}" class="btn btn-sm z-depth-0" role="button" target="_blank">Video</a>
              {%- endif -%}
            </p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </article>
</div>
